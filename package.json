{
  "name": "invoflow",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@dxfrontier/cds-ts-dispatcher": "^5.0.1",
    "@sap/cds": "^9",
    "express": "^4",
    "@cap-js/hana": "^2",
    "@sap/xssec": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.36.0",
    "@cap-js/cds-types": "^0.12.0",
    "@cap-js/sqlite": "^2.0.2",
    "@sap/cds-dk": ">=8",
    "@types/node": "^22.0.0",
    "tsx": "^4",
    "typescript": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "cds build",
    "build:mta": "mbt build",
    "deploy": "cf deploy mta_archives/invoflow_1.0.0.mtar"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js",
    "#dispatcher": "./@dispatcher/index.js"
  },
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "credentials": {
             "database": "sqlite.db"
          }
        },
        "[production]": {
          "kind": "hana"
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-runtime": true,
      "workzone": true
    },
    "hana": {
      "deploy-format": "hdbtabledata"
    }
  }
}
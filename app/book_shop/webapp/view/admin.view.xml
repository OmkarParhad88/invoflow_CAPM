<mvc:View controllerName="bookshop.controller.admin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">


        <Table id="authorTable" growing="true" growingThreshold="10" items="{
             path: '/authors'
           }">
            <columns>
                <Column>
                    <Text text="Name"/>
                </Column>
                <Column>
                    <Text text="DOB"/>
                </Column>
                <Column>
                    <Text text="DOD"/>
                </Column>
                <Column>
                    <Text text="epc_ID"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{name}" />
                        <Text text="{dateOfBirth}" />
                        <Text text="{dateOfDeath}" />
                        <Text text="{epc_ID}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

    <Table id="booksTable"
           growing="true"
           growingThreshold="10"
           items="{
             path: '/books'
           }">
      <columns>
        <Column><Text text="Title"/></Column>
        <Column><Text text="Author ID"/></Column>
        <Column><Text text="Stock"/></Column>
        <Column><Text text="Price"/></Column>
        <Column><Text text="Currency"/></Column>
        <Column><Text text="Genre"/></Column>
        <Column><Text text="Created At"/></Column>
        <Column><Text text="Created By"/></Column>
        <Column><Text text="Modified At"/></Column>
        <Column><Text text="Modified By"/></Column>
      </columns>

      <items>
        <ColumnListItem>
          <cells>
            <Text text="{title}" />
            <Text text="{author_ID}" />
            <Text text="{stock}" />
            <Text text="{price_amount}" />
            <Text text="{price_currency}" />
            <Text text="{genre}" />
            <Text text="{createdAt}" />
            <Text text="{createdBy}" />
            <Text text="{modifyAt}" />
            <Text text="{modifyBy}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>

    </Page>
</mvc:View>